@model practica2.ViewModel.CuentaBancariaViewModel
@{
    ViewData["Title"] = "";
}
<link
      rel="stylesheet"
      href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.min.css"
    />
<link rel="stylesheet" href="~/css/listarcuentas.css" />
<body style="background-color: #f8f9fa">
<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="card-title"><span class="material-symbols-outlined">
                    payments
                    </span> Lista de Cuentas Bancarias</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped" id="cuentaTable">
                        <thead>
                            <tr>
                                <th>Nombre del Titular</th>
                                <th>Tipo de Cuenta</th>
                                <th>Saldo Inicial</th>
                                <th>Correo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListarCuentaBancaria != null && Model.ListarCuentaBancaria.Any())
                            {
                                @foreach (var cuenta in Model.ListarCuentaBancaria)
                                {
                                    <tr>
                                        <td>@cuenta.Titular</td>
                                        <td>@cuenta.TipoCuenta</td>
                                        <td>@cuenta.SaldoInicial</td>
                                        <td>@cuenta.Correo</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">No hay cuentas bancarias registradas.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<!-- DataTables -->
<script src="https://cdn.datatables.net/2.1.5/js/dataTables.min.js"></script>
<script>
    $(document).ready(function() {
        $('#cuentaTable').DataTable();
    });
</script>

}
</body>